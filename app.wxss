/**app.wxss**/

page {
  position: relative;
  z-index: 9999998;
  background: #F7F7F7;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.clear {
  clear: both;
}

view, text {
  word-break: break-all;
  font-size: 28rpx;
}

navigator {
  display: inline;
}

button {
  font-size: 36rpx;
}

._button {
  text-align: center;
  padding: 22rpx;
  color: #fff;
  width: 80%;
  margin: 40rpx auto;
  border-radius: 30px;
  background: linear-gradient(to right, #38E56A, #1FC13B);
}

._right {
  width: 15rpx;
  height: 26rpx;
}

._bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.loading {
  text-align: center;
  color: #666;
  padding: 2vw 0;
  font-size: 0;
}

.loading-gif {
  display: inline-block;
  font-size: 0;
}

@keyframes loading {
  0% {
    width: 14rpx;
  }
  50% {
    width: 28rpx;
  }
  100% {
    width: 14rpx;
  }
}

.loading-gif view {
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  background: #ccc;
  animation: loading 1.5s infinite;
  margin-left: 5px;
}

.loading-gif .a {
  animation-delay: 0.1s
}

.loading-gif .b {
  animation-delay: 0.2s
}

.loading-gif .c {
  animation-delay: 0.4s
}

.loading-gif .d {
  animation-delay: 0.8s
}

.loading-gif .e {
  animation-delay: 1.2s
}