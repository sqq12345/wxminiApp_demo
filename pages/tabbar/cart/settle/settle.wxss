/* pages/settle/settle.wxss */

.container {
    padding: 30rpx;
    margin-bottom: 100rpx;
}

.box {
    background: #fff;
    border-radius: 5px;
    box-shadow: 0px 10px 20px 1px rgba(152, 152, 152, 0.03);
}

.cart {
    margin-top: 30rpx;
}

.bottom-btn {
    position: fixed;
    z-index: 999;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    background: #fff;
    border-top: 1px solid #eeeeee;
}

.bottom-btn .all {
    flex-grow: 2;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    justify-content: flex-end;
    padding-right: 20rpx;
    font-size: 24rpx;
}

.bottom-btn .all .price {
    color: #FF6600;
}

.bottom-btn .buy {
    background: #25CE41;
    color: #fff;
    display: flex;
    align-items: center;
    flex-grow: 1;
    justify-content: center;
    font-size: 32rpx;
}

.bottom-btn .buy.disable{
    background: #cccccc;
}

.line {
    border-top: 1px solid rgba(244, 244, 244, 1);
    line-height: 90rpx;
    padding: 0 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.line input{
    flex: 1;
    margin-left: 2em;
}

.item {}

.item .header {
    display: flex;
    align-items: center;
    padding: 20rpx;
    justify-content: space-between;
}

.item .header>view {
    display: flex;
    align-items: center;
    font-size: 24rpx;
}

.select {
    display: flex;
    align-items: center;
}

.select-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 15rpx;
    border-radius: 50%;
}

.item .goods {
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.thumbView {
    position: relative;
}

.shortage {
    position: absolute;
    left: 0;
    top: 0;
    width: 160rpx;
    height: 160rpx;
    line-height: 160rpx;
    text-align: center;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    background: rgba(0,0,0,0.6);
    color: #fff;
    font-size: 36rpx;
}

.item .goods .thumb {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.goods .unit {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #555555;
}

.goods .info {
    flex-grow: 1;
    position: relative;
    min-height: 120rpx;
    padding-bottom: 40rpx;
}

.goods .info .price {
    position: absolute;
    bottom: 0;
    width: 100%;
    font-size: 28rpx;
    color: #FF6600;
}

.goods .info .calc {
    float: right;
    color: #25CE41;
    display: inline-flex;
}

.goods .info .calc .op {
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
}

.goods .info .num {
    text-align: center;
    width: 48rpx;
    display: inline-block;
}

.goods .title {
    line-height: 1;
    font-weight: 500;
}

.user {
    background: #fff;
    border-radius: 5px;
    padding: 20rpx;
    position: relative;
    overflow: hidden;
    display: block;
}

.user>view {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8rpx;
    align-items: center;
}

.user .username {
    font-size: 32rpx;
    font-weight: 500;
}

.user .phone {
    color: #25CE41;
    font-size: 28rpx;
}

.user .address {
    color: #666666;
}

.user .address text {
    font-size: 24rpx;
}

.user .line {
    position: absolute;
    width: 100%;
    height: 6rpx;
    bottom: 0;
    left: -16rpx;
    right: 0;
}

.bf9fefa {
    background: #F9FEFA;
}

.bfbfbfb {
    background: #fbfbfb;
}
.bfbfbfb .title{
    color: #999999;
}
.bfbfbfb .unit{
    color: #AAAAAA;
}

.line .inputBox{
    display: flex;
    align-items: center;
}
.line .inputBox text{
    flex: 1;
    text-align: right;
    font-size: 28rpx;
    color: #333333;
}
.line .inputBox image{
    width: 10rpx;
    height: 22rpx;
    margin-left: 14rpx;
}

.line text.red{ color: #FF2626;}
.line >text:first-child{
    width: 5.5em;
}
.line input{
    margin-left: 0;
}
/*弹出层*/
.fixedBox{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
}
.fixedBox .fixedBg{
    position: absolute;
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,0.3);
}
.fixedBox .fixedContent{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0 30rpx;
    background: white;

}
.fixedBox .fixedContent .title{
    font-size: 28rpx;
    height: 110rpx;
    text-align: center;
    line-height: 110rpx;
    border-bottom:1px solid #EEEEEE;
}
.fixedBox .fixedContent .list{
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 88rpx;
    border-bottom: 1px solid #F4F4F4;
}
.fixedBox .fixedContent .list view{
    font-size: 28rpx;
    color: #000000;
}
.fixedBox .fixedContent .list image{
    width: 40rpx;
    height: 40rpx;
}
