/* pages/settle/settle.wxss */

.container {
    padding: 30rpx;
}

.bottom-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    background: #fff;
}

.bottom-btn .all {
    flex-grow: 2;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    justify-content: flex-end;
    padding-right: 20rpx;
}

.bottom-btn .buy {
    background: #26b802;
    color: #fff;
    display: flex;
    align-items: center;
    flex-grow: 1;
    justify-content: center;
}

.item{
    margin-bottom: 30rpx;
}

.item.user{
    padding-bottom: 20rpx;
}

.item.user>view>text:last-child{
    float: right;
}

.item .header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    justify-content:space-between;
}

.item .header .logo {
    border-radius: 50%;
    border: 1px solid #eeeeee;
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
}

.item .header view {
    display: flex;
    align-items: center;
}

.item .goods {
    display: flex;
    align-items: center;
    padding: 20rpx;
    margin: 0 -20rpx;
    background: #e5eee5;
}

.item .goods image {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #ffffff;
    border-radius: 5px;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.goods .unit {
    font-size: 28rpx;
    color: #555555;
}

.goods .info {
    flex-grow: 1;
    position: relative;
    height: 156rpx;
}

.goods .info .price {
    position: absolute;
    bottom: 0;
    width: 100%;
    font-size: 32rpx;
}

.goods .info .calc {
    float: right;
}

.goods .info .calc .add, .goods .info .calc .sub {
    display: inline-block;
    width: 44rpx;
    height: 44rpx;
    border: 1px solid #eeeeee;
    border-radius: 50%;
    text-align: center;
    line-height: 44rpx;
}

.goods .info .num {
    text-align: center;
    width: 48rpx;
    display: inline-block;
}

.goods .title {
    line-height: 1;
}

.item {
    background: #ffffff;
    border-radius: 5px;
    padding: 20rpx 20rpx 0 20rpx;
}

.item .line {
    border-bottom: 1px solid #eeeeee;
    line-height: 90rpx;
}

.item .line text:last-child {
    float: right;
}