/* pages/cart/cart.wxss */

.container {
    padding: 30rpx;
    padding-top: 0;
    margin-bottom: 100rpx;
}

.item {
    background: #ffffff;
    border-radius: 5px;
    margin-bottom: 30rpx;
    box-shadow: 0px 10px 20px 1px rgba(152, 152, 152, 0.03);
}

.item .header {
    display: flex;
    /*align-items: center;*/
    border-bottom: 1rpx solid #F4F4F4;
    /*padding: 20rpx 20rpx 20rpx 0;*/
    padding-right: 20rpx;
    justify-content: space-between;
    min-height: 80rpx;
}

.item .header >navigator {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
}
.item .header >navigator >view{
    display: flex;
    align-items: center;
    font-size: 24rpx;
}
.select {
    display: flex;
    align-items: center;
}

.select-icon {
    min-width: 34rpx;
    max-width: 34rpx;
    height: 34rpx;
    margin-right: 15rpx;
    border-radius: 50%;
    overflow: hidden;
}

.select-shop,.select-goods {
    display: flex;
    align-items: center;
    justify-content: center;
}
.select-shop image,.select-goods image{
    width: 34rpx;
    height: 34rpx;
    margin-right: 15rpx;
    margin-left: 20rpx;
    border-radius: 50%;
}



.item .goods {
    display: flex;
    /*align-items: center;*/
    padding: 20rpx 20rpx 20rpx 0;
}

.item .goods .thumb {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.goods .unit {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #555555;
}

.goods .info {
    flex-grow: 1;
    position: relative;
    height: 156rpx;
}

.goods .info .price {
    position: absolute;
    bottom: 0;
    width: 100%;
    font-size: 28rpx;
    color: #FF6600;
}

.goods .info .calc {
    float: right;
    color: #25CE41;
    display: inline-flex;
}

.goods .info .calc .op {
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
}

.goods .info .num {
    text-align: center;
    width: 48rpx;
    display: inline-block;
}

.goods .title {
    /*line-height: 1;*/
    font-weight: bold;
}

.bottom-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    background: #fff;
}

.bottom-btn .all {
    flex-grow: 2;
    display: flex;
    align-items: center;
    /*padding: 0 30rpx;*/
    padding-right: 30rpx;
    justify-content: space-between;
}

.bottom-btn .all view {
    font-size: 28rpx;
}

.bottom-btn .all .select {
    vertical-align: text-top;
    font-size: 24rpx;
    padding-left: 30rpx;
}

.bottom-btn .price {
    color: rgb(219, 109, 50);
}

.bottom-btn .extr {
    font-size: .75em !important;
    color: #999;
    text-align: right;
}

.delete {
    background: red !important;
}

.bottom-btn .buy {
    background: #26b802;
    color: #fff;
    display: flex;
    align-items: center;
    flex-grow: 1;
    justify-content: center;
    font-size: 32rpx;
}

.buy.disable {
    background: #cccccc;
}

.edit {
    text-align: right;
    padding: 20rpx;
    color: #888888;
}

.empty {
    margin-top: 300rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: #999999;
}

.empty image {
    display: block;
    width: 410rpx;
    height: 172rpx;
    margin-bottom: 30rpx
}

.item .goods .image {
    position: relative;
}

.item .goods .image .disable {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 160rpx;
    height: 160rpx;
    background: rgba(0,0,0,0.6);
    color: #fff;
    border-radius:5px;
    border: 1px solid #000;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
}

.item .goods.disable {
    background: #FBFBFB;
}

.item .goods.disable view{
    color: #999999;
}
