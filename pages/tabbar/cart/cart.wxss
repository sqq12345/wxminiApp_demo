/* pages/cart/cart.wxss */

.container {
    padding: 30rpx;
    margin-bottom: 100rpx;
}

.item {
    background: #ffffff;
    border-radius: 5px;
    margin-bottom: 30rpx;
    box-shadow: 0px 10px 20px 1px rgba(152, 152, 152, 0.03);
}

.item .header {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #eeeeee;
    padding: 20rpx;
    justify-content: space-between;
}

.item .header>view {
    display: flex;
    align-items: center;
    font-size: 24rpx;
}

.select {
    display: flex;
    align-items: center;
}

.select-icon {
    width: 34rpx;
    height: 34rpx;
    margin-right: 15rpx;
}

.item .goods {
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.item .goods .thumb {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.goods .unit {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #555555;
}

.goods .info {
    flex-grow: 1;
    position: relative;
    height: 156rpx;
}

.goods .info .price {
    position: absolute;
    bottom: 0;
    width: 100%;
    font-size: 28rpx;
    color: #FF6600;
}

.goods .info .calc {
    float: right;
    color: #25CE41;
    display: inline-flex;
}

.goods .info .calc .op {
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
}

.goods .info .num {
    text-align: center;
    width: 48rpx;
    display: inline-block;
}

.goods .title {
    line-height: 1;
    font-weight: 500;
}

.bottom-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    background: #fff;
}

.bottom-btn .all {
    flex-grow: 2;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
}

.bottom-btn .all view {
    font-size: 28rpx;
}

.bottom-btn .all .select {
    vertical-align: text-top;
    font-size: 24rpx;
}

.bottom-btn .price {
    color: rgb(219, 109, 50);
}

.bottom-btn .extr {
    font-size: .75em !important;
    color: #999;
    text-align: right;
}

.bottom-btn .buy {
    background: #26b802;
    color: #fff;
    display: flex;
    align-items: center;
    flex-grow: 1;
    justify-content: center;
    font-size: 32rpx;
}

.buy.disable {
    background: #cccccc;
}