<view class='container'>
  <search cities="{{props.city.list}}" selected="{{props.city.selected}}" types="1" placeholder="请输入您要搜索的农场" bind:onChange="onCityChange" />
  <view class="type">
    <scroll-view scroll-x>
      <text wx:for="{{types}}" wx:key='{{index}}' bind:tap="changeType" data-id="{{item.id}}" class="item {{selectedTypeId==item.id?'selected':''}}">{{item.name}}<text class="line" wx:if="{{selectedTypeId==item.id}}"/></text>
    </scroll-view>
    <view class="right">
      <image src="/static/icons/line.png" class="line"/>
      <navigator hover-class="none" class="button" url="/pages/enter/enter"><image src="/static/icons/plus2.png"/>入驻</navigator>
    </view>
  </view>
  <map id="map" class="map" scale="{{scale}}" show-location markers="{{props.city.markers}}" latitude="{{props.city.latitude}}" longitude="{{props.city.longitude}}" bindmarkertap="tapMarker" bindregionchange="regionChange" bindtap="tapMap">
    <cover-view class="detail" wx:if="{{detailShow}}">
      <cover-view class="head">
        <cover-view class="name">{{selectedMarker.name}}</cover-view>
        <cover-view class="url" bind:tap="goDetail">详情 ></cover-view>
      </cover-view>
      <cover-view class="bottom-line"></cover-view>
      <cover-view class="footer">
        <cover-view><cover-image src="/static/icons/tag.png"/>
          <cover-view class="text">{{selectedMarker.tags}}</cover-view>
        </cover-view>
        <cover-view style="height:16rpx"></cover-view>
        <cover-view ><cover-image src="/static/icons/plane.png"/><cover-view class="text">距我{{selectedMarker.distance}}（{{selectedMarker.address}}）</cover-view></cover-view>
      </cover-view>
    </cover-view>
  </map>
</view>
