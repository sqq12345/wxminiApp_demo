/* pages/tabbar/home/home.wxss */

page {
    position: absolute;
    width: 100%;
    height: 100%;
}

.container {
    display: flex;
    flex-direction: column;
    position: absolute;
    width: 100%;
}

.search {
    background: #ffffff;
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.search text {
    margin-right: 20rpx;
}

.search input {
    background: #eeeeee;
    border-radius: 30rpx;
    flex: 1;
    height: 70rpx;
    padding-left: 1em;
}

.type {
    background: #ffffff;
    padding: 0 20rpx;
    padding-bottom: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.type scroll-view {
    white-space: nowrap;
    max-width: calc(100% - 4.5em);
    border-right: 1px solid #cccccc;
}

.type scroll-view text {
    margin-right: 20rpx;
}

.type scroll-view text.selected{
    color: green;
}

.type .button {
    word-break: keep-all;
    border: 1px solid #cccccc;
    padding: 10rpx 30rpx;
    border-radius: 20px;
    font-size: 28rpx;
}

.map {
    flex: 1;
    width: 100%;
    position: relative;
}

.detail {
    position: absolute;
    width: calc(100% - 100rpx);
    bottom: 30rpx;
    background: #fff;
    margin: auto;
    border-radius: 5px;
    left: 0px;
    right: 0px;
    padding: 30rpx 20rpx;
    box-shadow: 2px 2px 2px #cccccc;
    z-index: 9999;
}

.detail .head{
    display: flex;
    justify-content: space-between;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #eeeeee;
}

.detail .footer{
    padding: 10rpx 0;
}

.detail .name{
    font-weight: bold;
}

.detail .url{
    font-size: 28rpx;
    color: #555555;
}

.detail .footer cover-view{
    margin-top: 20rpx;
    font-size: 24rpx;
}