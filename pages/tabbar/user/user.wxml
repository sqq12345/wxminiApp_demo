<!-- pages/tabbar/shoplist/shoplist.wxml -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container">
        <view class="head">
            <view class="info">
                <navigator hover-class="none" url="/pages/tabbar/user/profile/profile">
                    <image />
                    <text>username</text>
                </navigator>
                <view>
                    <navigator hover-class="none" class="num" url="/pages/tabbar/user/points/points">
                        <view>180</view>
                        <view>安积分</view>
                    </navigator>
                    <navigator hover-class="none" class="num" url="/pages/tabbar/user/fans/fans">
                        <view>30</view>
                        <view>粉丝</view>
                    </navigator>
                </view>
            </view>
            <view class="bottom">
                <view>
                    <view>
                        可提现金额:
                        <text>￥8888</text>
                    </view>
                    <view class="buttons">
                        <navigator hover-class="none" url="/pages/tabbar/user/earnings/earnings">收益明细</navigator>
                        <navigator hover-class="none">提现</navigator>
                    </view>
                </view>
            </view>
        </view>
        <view class="block">
            <view class="title">
                <text>我的订单</text>
                <navigator hover-class="none" class="more" url="/pages/tabbar/user/orders/orders">查看更多></navigator>
            </view>
            <view class="block">
                <view class="icons">
                    <navigator hover-class="none" class="icon" url="/pages/tabbar/user/orders/orders?status=1">
                        <image />
                        待付款
                    </navigator>
                    <navigator hover-class="none" class="icon" url="/pages/tabbar/user/orders/orders?status=2">                    
                        <image />
                        待发货
                    </navigator>
                    <navigator hover-class="none" class="icon" url="/pages/tabbar/user/orders/orders?status=3">                    
                        <image />
                        待收货
                    </navigator>
                    <navigator hover-class="none" class="icon" url="/pages/tabbar/user/orders/orders?status=4">                    
                        <image />
                        待评价
                    </navigator>
                </view>
            </view>
        </view>
        <view class="block">
            <view class="title">
                <text>正在参与</text>
            </view>
            <view class="block">
                <view class="icons">
                    <view class="icon">
                        <image />
                        发起接龙
                    </view>
                    <view class="icon">
                        <image />
                        我的拼团
                    </view>
                    <view class="icon" style="visibility:hidden">
                    </view>
                    <view class="icon" style="visibility:hidden">
                    </view>
                </view>
            </view>
        </view>
        <view class="block">
            <view class="icons">
                <view class="icon">
                    <image />
                    优惠券
                </view>
                <view class="icon">
                    <image />
                    收藏
                </view>
                <view class="icon">
                    <image />
                    客服
                </view>
                <view class="icon">
                    <image />
                    设置
                </view>
            </view>
        </view>
    </view>
</view>