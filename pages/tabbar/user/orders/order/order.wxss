/* pages/tabbar/user/orders/order/order.wxss */
.block{
    background: #fff;
    padding: 30rpx;
    margin-top: 30rpx;
}

.order .top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    margin: 0 -20rpx;
    font-size: 30rpx;
    color: #555555; 
}

.order image{
    width: 160rpx;
    height: 160rpx;
    border:1px solid #eee;
    border-radius: 5px;
    margin-right: 20rpx;
}

.order .middle{
    display: flex;
    padding: 30rpx 0;
    border-bottom: 1px solid #eee; 
}

.order .middle .name{
    font-weight: bold;
}

.order .middle .unit{
    font-size: 30rpx;
    color: #555555;
    margin-top: 5px;
}

.order .middle .unit .num{
    float: right;
}

.order .middle>view{
    position: relative;
    flex: 1;
}

.order .middle .price{
    position: absolute;
    bottom: 6rpx;
}

.order .bottom>view{
    display: flex;
    justify-content: space-between;
    padding: 10rpx 0;
}

.order .bottom>view:first-of-type{
    margin-top: 20rpx;
}

.info{
    color: #555555;
}

.info view{
    margin-bottom: 20rpx;
}

.info view:last-of-type{
    margin-bottom: 0;
}

.call{
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 30rpx;
    border-top: 1px solid #eee;
}

.ops{
    text-align: right;
    padding: 60rpx 30rpx;
}

.ops .button{
    color: #fff;
    padding: 12rpx 20rpx;
    background: green;
    border-radius: 20px;
    margin-left: 30rpx;
}

