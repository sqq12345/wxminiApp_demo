/* pages/tabbar/user/user.wxss */

.block {
    background: #ffffff;
    margin-bottom: 20rpx;
}

.block .title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #eeeeee;
    font-weight: bold;
}

.block .title .more {
    font-weight: normal;
    color: #555555;
}

.icons {
    display: flex;
    background-color: #ffffff;
    padding: 20rpx 0;
}

.icons .icon {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.icons .icon image {
    width: 100rpx;
    height: 100rpx;
    border: 1px solid #eeeeee;
}

.head {
    display: flex;
    position: relative;
    align-items: center;
    height: 440rpx;
    background: #54f52c;
    color: #ffffff;
    margin-bottom: 80rpx;
}

.head .info {
    display: flex;
    flex: 1;
    align-items: center;
    padding: 30rpx;
    justify-content: space-between;
}

.head .info image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1px solid #eeeeee;
    margin-right: 20rpx;
}

.head .info>view,.head .info>navigator {
    display: flex;
    align-items: center;
    justify-content: center;
}

.head .info>view .num {
    text-align: center;
    margin-left: 40rpx;
}

.head .bottom {
    position: absolute;
    bottom: -60rpx;
    width: 100%;
    height: 120rpx;
}

.head .bottom>view {
    background: #fff;
    margin: 0 auto;
    width: calc(100% - 120rpx);
    height: 100%;
    border-radius: 5px;
    display: flex;
    align-items: center;
    color: #000;
    padding: 0 30rpx;
    justify-content: space-between;
}

.head .bottom .buttons {}

.head .bottom .buttons navigator {
    color: #fff;
    background: #ccc;
    padding: 10rpx 26rpx;
    border-radius: 20px;
    margin-left: 20rpx;
}