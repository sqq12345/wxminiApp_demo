/* pages/tabbar/user/user.wxss */

.block {
    background: #ffffff;
    margin-bottom: 10px;
}

.block .title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
    border-bottom: 1px solid #eeeeee;
    font-weight: bold;
}

.block .title .more {
    font-weight: normal;
    color: #555555;
}

.icons {
    display: flex;
    background-color: #ffffff;
    padding: 10px 0;
}

.icons .icon {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.icons .icon image {
    width: 50px;
    height: 50px;
    border: 1px solid #eeeeee;
}

.head {
    display: flex;
    position: relative;
    align-items: center;
    height: 220px;
    background: #54f52c;
    color: #ffffff;
    margin-bottom: 40px;
}

.head .info {
    display: flex;
    flex: 1;
    align-items: center;
    padding: 15px;
    justify-content: space-between;
}

.head .info image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 1px solid #eeeeee;
    margin-right: 10px;
}

.head .info>view,.head .info>navigator {
    display: flex;
    align-items: center;
    justify-content: center;
}

.head .info>view .num {
    text-align: center;
    margin-left: 20px;
}

.head .bottom {
    position: absolute;
    bottom: -30px;
    width: 100%;
    height: 60px;
}

.head .bottom>view {
    background: #fff;
    margin: 0 auto;
    width: calc(100% - 60px);
    height: 100%;
    border-radius: 5px;
    display: flex;
    align-items: center;
    color: #000;
    padding: 0 15px;
    justify-content: space-between;
}

.head .bottom .buttons {}

.head .bottom .buttons text {
    color: #fff;
    background: #ccc;
    padding: 5px 13px;
    border-radius: 20px;
    margin-left: 10px;
}