<view class='container'>
    <header navbar-data='{{nvabarData}}' />
    <swiper indicator-dots autoplay interval="{{5000}}" duration="{{1000}}">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image" />
            </swiper-item>
        </block>
    </swiper>
    <view class="info">
        <view class="price">
            <text><text class="_rmb">￥</text>12</text>
            <text>.08</text>
        </view>
        <view class="unit">
            <view>
                规格:
                <text>500g/斤</text>
            </view>
            <view>
                配送范围:
                <text>北京市</text>
            </view>
        </view>
        <view class="title">精品牛腩块</view>
        <view class="desc">
            xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
        </view>
        <view class="extr">
            <text>快递</text>
            <text>已售</text>
            <text>库存</text>
        </view>
    </view>
    <view class="comments">
        <view class="header">
            大家都在说
            <view>
                <wux-rater allow-half defaultValue="{{3.5}}" disabled fontSize="14" starSize="14" />
                4.0
            </view>
        </view>
        <view class="comment">
            <image class="head" />
            <view class="content">
                <view class="username">
                    username
                    <wux-rater allow-half defaultValue="{{2.5}}" disabled fontSize="12" starSize="12" />
                </view>
                <view class="desc">xxxxxxxxxxxxxxxxxxxxxxxxx</view>
                <view class="pics">
                    <image />
                    <image />
                    <image />
                </view>
                <view class="bottom">
                    <text>time</text>
                    <text>规格</text>
                </view>
            </view>
        </view>
        <view class="comment">
            <image class="head" />
            <view class="content">
                <view class="username">
                    username
                    <wux-rater allow-half defaultValue="{{4}}" disabled fontSize="12" starSize="12" />
                </view>
                <view class="desc">xxxxxxxxxxxxxxxxxxxxxxxxx</view>
                <view class="pics">
                    <image />
                    <image />
                    <image />
                </view>
                <view class="bottom">
                    <text>time</text>
                    <text>规格</text>
                </view>
            </view>
        </view>
        <navigator url="/pages/comments/comments" class="btn-all">查看全部</navigator>
    </view>
    <view class="shop">
        <image class="logo" />
        <view class="name">
            <view class="title">安否自营农场</view>
            <view class="sale">总销量9999</view>
        </view>
        <navigator hover-class="none" url="/pages/goodslist/goodslist">进店逛逛<image src="/static/icons/goods/right.png"/></navigator>
    </view>
    <view class="detail">
        <view class="text">- 商品详情 -</view>
        <!-- 商品长图 -->
    </view>
    <view class="bottom-btn">
        <view class="nav">
            <view>
                <image src="/static/icons/goods/1.png" />
                收藏
            </view>
            <view>
                <image src="/static/icons/goods/2.png" />
                购物车
            </view>
        </view>
        <view class="add">加入购物车</view>
        <view class="buy">立即购买</view>
    </view>
</view>