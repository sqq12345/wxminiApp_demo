/* pages/detail/detail.wxss */

.head {
    background: rgb(75, 211, 57);
    width: 100%;
    height: 120vw;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: -20vw;
}

.head .logo {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: 1px solid #eeeeee;
    margin-bottom: 5px;
}

.head .title {
    font-size: 22px;
    color: #000000;
}

.head view {
    margin-bottom: 5px;
    color: #555555;
}

.block {
    background: #fff;
    padding: 10px;
    margin-bottom: 10px;
}

.block .item {
    padding: 10px 0;
}

.block .item .label {
    float: left;
    width: 4em;
    padding-right: 1em;
    color: #555555;
}

.block .item .tags {
    margin-left: 5em;
    padding-bottom: 10px;
    border-bottom: 1px solid #eeeeee;
}

.block .item:last-of-type .tags{
    border: 0;
}

.block .item .tags text {
    display: inline-block;
    border-radius: 15px;
    padding: 3px 8px;
    background: #87f571;
    margin-bottom: 8px;
    margin-right: 8px;
}

.block .title{
    font-weight: bold;
    font-size: 18px;
    padding: 5px 0;
}

.desc .content {
    text-indent: 2em;
    color: #555555;
}

.comments .comment {}

.comments .comment .userhead {
    border-radius: 50%;
    float: left;
    border: 1px solid #eeeeee;
    width: 35px;
    height: 35px;
}

.comments .comment .content {
    padding-left: 50px;
    text-align: left;
}

.comments .comment .bottom {
    font-size: 14px;
    color: #555555;
}

.comments .comment .pics image {
    border: 1px solid #eeeeee;
    position: relative;
    width: 31%;
    height: 0;
    overflow: hidden;
    padding-bottom: 30%;
    margin-right: 3.5%;
    box-sizing: border-box;
}

.comments .comment .pics>image:last-child {
    margin: 0;
}