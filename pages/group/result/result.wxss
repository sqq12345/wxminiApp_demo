.search input {
    background: #eeeeee;
    border-radius: 15px;
    flex: 1;
    height: 70rpx;
    padding-left: 1em;
}

.search {
    background: #ffffff;
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.container {
    margin-bottom: 170rpx;
}

.select-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 15rpx;
}

.goods {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #ffffff;
    margin-top: 20rpx;
    position: relative;
}

.goods .thumb {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.goods .unit {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #555555;
}

.goods .info {
    flex-grow: 1;
    position: relative;
    height: 156rpx;
}

.goods .info .price {
    position: absolute;
    bottom: 0;
    width: 100%;
    font-size: 32rpx;
    color: rgb(219, 109, 50);
}

.goods .info .price .select-icon {
    float: right;
}

.goods .shop {
    background: #cccccc;
    padding: 12rpx 26rpx;
    font-size: 28rpx;
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
    position: absolute;
    right: -20rpx;
}

.done {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}