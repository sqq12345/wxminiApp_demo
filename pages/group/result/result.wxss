.search input {
    background: #eeeeee;
    border-radius: 15px;
    flex: 1;
    height: 64rpx;
    padding-left: 86rpx;
}

.search {
    background: #ffffff;
    padding: 20rpx 32rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.search image {
    width: 32rpx;
    height: 30rpx;
    position: absolute;
    left: 74rpx;
}

.container {
    margin-bottom: 170rpx;
}

.select-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
}

.goods {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #ffffff;
    margin-top: 20rpx;
    position: relative;
}

.goods .thumb {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.goods .unit {
    font-size: 24rpx;
    color: #999999;
}

.goods .unit view {
    font-size: 24rpx;
}

.goods .info {
    flex-grow: 1;
    position: relative;
    height: 174rpx;
}

.goods .info .price {
    position: absolute;
    bottom: 0;
    width: 100%;
    color: #FF8A00;
}

.goods .info .price .select-icon {
    float: right;
}

.goods .shop {
    background: #DFF7E3;
    padding: 12rpx 26rpx;
    font-size: 22rpx;
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
    position: absolute;
    right: -20rpx;
    color: #32CC4A;
}

.goods .title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 350rpx;
}

.done {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}

.empty{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 300rpx;
    color: #999999
}