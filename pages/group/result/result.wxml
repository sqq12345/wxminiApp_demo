<!-- pages/group/search/search.wxml -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container" style="padding-top:{{occupation}}px;">
        <view class="search">
            <image src="/static/icons/search.png"/>
            <input placeholder='请输入您要搜索的商品' bind:confirm="search" value="{{query}}" />
        </view>
        <view wx:if="{{list.length>0}}">
            <view class="goods" wx:for="{{list}}" wx:key="{{index}}">
                <image class="thumb" src="{{item.thumb_image}}"/>
                <view class="info">
                    <view class="shop">{{item.merchant}}</view>
                    <view class="title">{{item.title}}</view>
                    <view class="unit">
                        <view>规格:{{item.specification}}</view>
                        <view>配送范围:{{item.address}}</view>
                    </view>
                    <view class="price">
                        ￥{{item.strPrice}}
                        <image class="select-icon" bind:tap="select" data-id="{{item.id}}" src="/static/icons/cart/{{item.selected?'selected.png':'unselected.png'}}" />
                    </view>
                </view>
            </view>
             <navigator class="_button done" url="/pages/group/start" delta="2" open-type="navigateBack">选好了</navigator>
        </view>
        <view wx:if="{{list.length==0}}" class="empty">
            没有找到相关商品
        </view>
    </view>
</view>