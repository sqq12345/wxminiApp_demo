<!-- pages/group/search/search.wxml -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container">
        <view class="search">
            <input placeholder='请输入您要搜索的商品' bind:confirm="search" value="{{query}}" />
        </view>
        <view>
            <view class="goods" wx:for="{{results}}" wx:key="{{index}}">
                <image class="thumb" />
                <view class="info">
                    <view class="shop">{{item.shop.name}}</view>
                    <view class="title">{{item.name}}</view>
                    <view class="unit">
                        <view>{{item.unit}}</view>
                        <view>配送范围</view>
                    </view>
                    <view class="price">
                        ￥{{item.price}}
                        <image class="select-icon" bind:tap="select" data-id="{{item.id}}" src="/static/icons/cart/{{item.selected?'selected.png':'unselected.png'}}" />
                    </view>
                </view>
            </view>
        </view>
        <navigator class="_button done" url="/pages/group/start">选好了</navigator>
    </view>
</view>