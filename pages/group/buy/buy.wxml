<view class="container">
    <view class="item">
        <view class="start">
            创建时间 : {{item.create_at}}
            <image />
        </view>
        <view class="title">title</view>
        <view class="desc">content</view>
        <view class="end">截止时间 : {{item.endtime}}</view>
    </view>
    <view class="goods-list">
        <view class="goods">
            <image class="thumb" src="{{item.thumb_image}}" />
            <view class="info">
                <view class="shop">{item.merchant}</view>
                <view class="title">{item.title}</view>
                <view class="unit">
                    <view>规格:{{item.specification}}</view>
                    <view>配送范围:{{item.address}}</view>
                </view>
                <view class="price">
                    <text><text class="_rmb">￥</text>{{item.strPrice}}</text>
                    <image class="delete" src="/static/icons/group/delete.png" bind:tap="remove" data-id="{{item.id}}" />
                </view>
            </view>
        </view>
    </view>
</view>