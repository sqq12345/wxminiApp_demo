<!-- pages/group/search/search.wxml -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container">
        <view class="search">
            <input placeholder='请输入您要搜索的商品' bind:confirm="search"/>
        </view>
        <view class="grid">
            <view wx:for="{{list}}" wx:key="{{item}}">
                <view>
                    <text>{{item.text}}</text>
                    <image />
                </view>
            </view>
        </view>
    </view>
</view>