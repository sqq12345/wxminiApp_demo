<!-- pages/group/search/search.wxml -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container">
        <view class="search">
            <input placeholder='请输入您要搜索的商品' bind:confirm="search"/>
        </view>
        <view class="grid">
            <view wx:for="{{list}}" wx:key="{{item}}">
                <navigator url="/pages/group/result/result">
                    <text>{{item.text}}</text>
                    <image src="{{item.thumb}}" mode="aspectFit"/>
                </navigator>
            </view>
        </view>
    </view>
</view>