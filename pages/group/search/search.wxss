.search input {
    background: #eeeeee;
    border-radius: 15px;
    flex: 1;
    height: 70rpx;
    padding-left: 1em;
}

.search {
    background: #ffffff;
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.grid {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx;
}

.grid>view {
    width: calc(33.333vw - 8rpx);
    height: calc(33.333vw - 8rpx);
}

.grid>view view {
    margin: 10rpx;
    width: calc(100% - 20rpx);
    height: calc(100% - 20rpx);
    background: #ffffff;
    border-radius: 5px;
    text-align: center;
    overflow: hidden;
}

.grid>view view text {
    padding-top: 1em;
    display: block;
}

.grid>view view image {
    width: 100%;
    height: 100%;
    background: #ccc
}