/* pages/user/logistics/logistics.wxss */

page{
    background: #fff;
}

.list {
    padding: 15px;
    position: relative;
}

.list .step {
    color: #999999;
    display: flex;
    align-items: center;
    margin-bottom: 50rpx;
}

.list .step:last-child{
    margin-bottom: 0;
}

.list .step image {
    width: 17px;
    height: 17px;
    border: 1px solid #ccc;
    border-radius: 50%;
    margin: 0 10rpx;
}

.list .step>view {
    flex-shrink: 0;
    flex-grow: 0;
}

.list .step .times{
    text-align: center;
    width: 35px;
}

.list .step .times .date {
    font-size: 11px !important;
}

.list .step .times .time {
    font-size: 9px !important;
}

.list .step .context{
    font-size: 24rpx;
    flex-shrink: 1;
}

.list .line{
    position: absolute;
    height: calc(100% - 50rpx);
    width: 1px;
    /* background: #F4F4F4; */
    background: red;
    left: 64px;
    top: 0;
}