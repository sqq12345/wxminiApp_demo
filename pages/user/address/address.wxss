/* pages/tabbar/user/address/address.wxss */

.container {
    margin-top: 20rpx;
}

.list {
    background: #fff;
}

.list .item {
    padding: 30rpx;
    border-bottom: 1px solid #eeeeee;
    display: block;
}

.list .item .username {
    font-weight: bold;
    font-size: 30rpx;
    margin-right: 1em;
    display: inline-block;
}

.list .item .phone {
    color: #555555;
}

.list .item .address {
    margin-top: 10rpx;
}

.button {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #2DD955;
    padding: 30rpx;
    background: #fff;
}

.button image{
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}