/* pages/user/address/add/add.wxss */

.form {
    background: #fff;
    padding: 0 30rpx;
    margin-top: 20rpx;
}

.form-group.info {
    border-bottom: 0;
    color: #666666;
}

.form-group {
    border-bottom: 1px solid #eeeeee;
    padding: 24rpx 0;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.form-group .picker {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 520rpx;
}

.form-group:last-of-type {
    border: 0;
}

.form-group>text {
    float: left;
    font-weight: 400;
    width: 5.5em;
}

.options{
    text-align: right;
    padding: 0 30rpx;
}

.options text{
    margin-left: 30rpx;
}

.options .default{
    color: #1FC13B;
}

.options .delete{
    color: red;
}