/* pages/user/coupon/coupon.wxss */

.container {
    padding: 30rpx;
}

.empty image {
    width: 188rpx;
    height: 156rpx;
    margin: 282rpx auto;
    margin-bottom: 52rpx;
    display: block;
}

.empty {
    text-align: center;
}

.coupon {
    height: 206rpx;
    display: flex;
    border-radius: 14rpx;
    overflow: hidden;
    position: relative;
    color: #C08700;
    margin-bottom: 30rpx;
}
.coupon-gray{
    color: #999999;
}
.coupon .left {
    flex: 6;
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.coupon .right {
    flex: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-right: 10rpx;
}

.coupon .right .start,.coupon .right .end{
    font-size: 22rpx !important;
}

.coupon .left .price{
    font-size: 80rpx;
    word-break: keep-all;
    margin-right: 26rpx;
}

.coupon .left .price ._rmb{
    font-size: 50%;
}

.coupon .left .info{
    margin-right: 20rpx;
}

.coupon .left .info .title{
    font-weight: bolder;
}

.coupon .left .info .role{
    font-size: 22rpx;
}

.coupon .left .info .label{
    font-size: 20rpx !important;
}
