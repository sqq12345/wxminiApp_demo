page {
    width: 100%;
    height: 100%;
}

.container{
    width: 100%;
    height: 100%;
    /*padding-top: 20rpx;*/
}

.item {
    background: #fff;
    margin-bottom: 20rpx;
    padding: 30rpx;
}

.item>view {
    margin-bottom: 20rpx;
}

.item .start {
    color: #AAAAAA;
    font-size: 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item .title {
    color: #333333;
    font-weight: 500;
}

.item .desc {
    color: #999999;
    font-size: 26rpx;
}

.item .end {
    color: #23C743;
    font-size: 24rpx;
}

.item .more {
    text-align: center;
    margin-bottom: 0;
}

.item .more .btn {
    border: 1px solid #BCBDBD;
    color: #BCBDBD;
    display: inline-block;
    padding: 6rpx 30rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
}

.ptView {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    width: 100%;
    height: 100%;
    color: #999;
}

.ptImg {
    display: block;
    width: 410rpx;
    height: 172rpx;
    margin-bottom: 20rpx;
}