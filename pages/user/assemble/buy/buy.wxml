<view class="container">
    <view class="item">
        <view class="start">
            <view class="userinfo">
                <open-data class="head" type="userAvatarUrl"></open-data>
                <open-data class="username" type="userNickName"></open-data>
            </view>
            <button class="share-btn" wx:if="{{detail.status==1}}"><image src="/static/icons/wechat-gray.png"/></button>
            <button open-type='share' class="share-btn" wx:else><image src="/static/icons/wechat.png"/></button>
        </view>
        <view class="title">{{detail.solitaire.title}}</view>
        <view class="desc">{{detail.solitaire.content}}</view>
        <view class="end">截止时间 : {{detail.solitaire.endtime}}</view>
    </view>
    <view class="goods-list">
        <view class="goods" wx:for="{{detail.goods}}" wx:key="{{index}}">
            <image class="thumb" src="{{item.goods_info.thumb_image}}" />
            <view class="info">
                <!--<view class="shop">{{item.goods_info.title}}</view>-->
                <view class="title text-overflow">{{item.goods_info.title}}</view>
                <view class="unit">
                    <view>规格:{{item.goods_info.specification}}</view>
                </view>
                <view class="price">
                    <text><text class="_rmb">￥</text>{{item.price}}</text>
                    <text class="num">X{{item.num}}</text>
                </view>
            </view>
        </view>
    </view>
    <view class="bottom-btn">
        <view class="all">
            <text>合计:<text class="price"><text class="_rmb">￥</text>{{detail.totalMoney}}</text></text>
        </view>
    </view>
</view>
