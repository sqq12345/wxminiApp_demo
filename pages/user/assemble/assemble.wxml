<view class="container">
  <block wx:if="{{list.length>0}}">
    <view class="item" wx:for="{{list}}" wx:key="{{index}}">
      <view class="start">加入时间 : {{item.create_at}}
        <button class="share-btn" wx:if="{{item.status==1}}"><image src="/static/icons/wechat-gray.png"/></button>
        <button class="share-btn" wx:else open-type='share' data-title="{{item.title}}" data-id="{{item.id}}" data-img="{{item.image}}"><image src="/static/icons/wechat.png"/></button>
      </view>
      <view class="title">{{item.title}}</view>
      <view class="desc">
        {{item.content}}
      </view>
      <view class="end">截止时间 : {{item.endtime}}</view>
      <view class="more">
        <!-- 更多的交互还不清楚 -->
        <navigator class="btn" hover-class="none" url="/pages/user/assemble/buy/buy?id={{item.id}}">更多</navigator>
      </view>
    </view>
  </block>
  <view class="empty" wx:else>
    <image src="/static/images/dingdan.png" class="ptImg"></image>
    <view>暂无拼团信息</view>
  </view>

</view>
