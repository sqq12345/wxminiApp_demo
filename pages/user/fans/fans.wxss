/* pages/tabbar/user/address/address.wxss */
.container{
    padding-top: 16rpx;
}

.list{
    background: #fff;
    display: flex;
    padding: 0 30rpx;
}

.list .item{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0;
    border-top: 1px solid #eeeeee;
}
.list:first-child .item{
    border-top: none;
}

.list .item image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 1px solid #eeeeee;
    margin-right: 20rpx;
    vertical-align: text-top;
}

.list .item .right{
    flex: 1;
    display: flex;
    flex-flow: column;
}
.list .item .right >view{
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    color: #333333;

}
.list .item .right >view:last-of-type{
    margin-top: 8px;
}
.list .item .right >view text{
    font-size: 24rpx;
    color: #999999;
}

.empty{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 300rpx;
    color: #999999
}
