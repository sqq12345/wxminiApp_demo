.refund{
    padding-top: 20rpx;
}
.refund .sub-content{
    padding: 0 30rpx;
    background: white;
    margin-bottom: 10rpx;
}
.refund .tips{
    padding: 0 30rpx  30rpx 30rpx;
    font-size: 24rpx;
    color: #999999;
    line-height: 1;
}
.refund .heard{
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
}
.refund .heard image{
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
}
.refund .heard .right{
    position: relative;
    flex: 1;
    padding-left: 18rpx;
    min-height: 120rpx;
    padding-bottom: 40rpx;
}
.refund .heard .right >view{
    display: flex;
    justify-content: space-between;
}
.refund .heard .name{
    font-size: 28rpx;
    line-height: 34rpx;
    color: #000000;
    padding: 14rpx 0;
}
.refund .heard text{
    font-size: 24rpx;
    color: #666666;
}
.refund .heard .price{
    position: absolute;
    bottom: 0;
    font-size: 22rpx;
    color: #000000;
}
.input-item{
    display: flex;
    align-items: center;
    height: 100rpx;
    border-bottom: 1px solid #EEEEEE;
}
.input-item:last-child{
    border-bottom: none;
}
.label{
    font-size: 28rpx;
    color: #000000;
    padding: 30rpx 0;
}
.input-item .money{
    font-size: 24rpx;
    color: #FF8A00;
}
.input-item .inputBox{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.input-item .inputBox input{
    flex: 1;
}
.input-item .inputBox text{
    flex: 1;
    text-align: right;
    padding-right: 26rpx;
    font-size: 28rpx;
    color: #BBBBBB;
}
.input-item .inputBox text.onShow{
    color: #000000;
}
.input-item .inputBox image{
    width: 14rpx;
    height: 24rpx;
}

/*弹出层*/
.fixedBox{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
}
.fixedBox .fixedBg{
    position: absolute;
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,0.3);
}
.fixedBox .fixedContent{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0 30rpx;
    background: white;

}
.fixedBox .fixedContent .title{
    font-size: 28rpx;
    height: 110rpx;
    text-align: center;
    line-height: 110rpx;
    border-bottom:1px solid #EEEEEE;
}
.fixedBox .fixedContent .list{
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 88rpx;
    border-bottom: 1px solid #F4F4F4;
}
.fixedBox .fixedContent .list view{
    font-size: 28rpx;
    color: #000000;
}
.fixedBox .fixedContent .list image{
    width: 40rpx;
    height: 40rpx;
}
.fixedBox .fixedContent ._button{
    margin-top: 120rpx;
}
