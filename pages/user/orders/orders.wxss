/* pages/tabbar/user/orders/orders.wxss */

.tabbar {
    display: flex;
    background: #fff;
    border-top: 1px solid #eee;
}

.empty image {
    width: 410rpx;
    height: 172rpx;
    margin: 282rpx auto;
    margin-bottom: 52rpx;
    display: block;
}

.empty {
    text-align: center;
    color: #999999;
}

.tabbar view {
    height: 82rpx;
    flex: 1;
    display: flex;
    justify-content: center;
}

.tabbar view text {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: auto;
    font-size: 24rpx;
}

.tabbar text.active {
    color: #26CE42;
    border-bottom: 2px solid #26CE42;
}

.order {
    background: #fff;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
}

.order .top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    padding-bottom: 20rpx;
    margin: 0 -20rpx;
    border-bottom: 1px solid #E8E8E8;
    color: #555555;
}

.order .top text {
    font-size: 24rpx;
}

.order .top .status {
    color: #FF8A00
}

.order image {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #eee;
    border-radius: 5px;
    margin-right: 20rpx;
}

.order .middle {
    display: flex;
}

.order .middle .name {
    font-weight: bold;
    color: #333;
}

.order .middle .unit {
    font-size: 24rpx;
    color: #555555;
    margin-top: 10rpx;
}

.order .middle .unit .num {
    float: right;
}

.order .middle>view {
    position: relative;
    flex: 1;
}

.order .middle .price {
    position: absolute;
    bottom: 6rpx;
    color: #FF8A00
}

.order .bottom {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}

.order .bottom .button {
    color: #999999;
    padding: 0 20rpx;
    line-height: 50rpx;
    background: #fff;
    border-radius: 20px;
    margin-left: 20rpx;
    border: 1px solid #DADADA;
    font-size: 24rpx;
}

.order .bottom .button.solid {
    color: #fff;
    border: 0;
    background: linear-gradient(to right, #38E56A, #1FC13B);
}

.total {
    font-size: 24rpx;
}

.total .price {
    font-size: 28rpx;
}

.bottom.status0 {}

.bottom.status1 {
    flex-direction: row;
}

.bottom.status2 {}

.bottom.status3 {}

.order .goods .middle {
    margin: 0 -15rpx;
    padding: 26rpx 15rpx;
    margin-bottom: 22rpx;
    border-radius: 8rpx;
    box-shadow: 0px 0px 10px 1px #eee;
}

.order .goods:last-of-type {
    margin-bottom: 0;
}

.sub-order .shop {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 22rpx 0;
}

.sub-order .shop view {
    display: inline-flex;
    align-items: center;
    font-size: 24rpx;
}

.sub-order .shop image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 14rpx;
    border-radius: 50%;
}

.sub-order .shop text {
    font-size: 22rpx;
    color: #AAAAAA;
}