<view class="container">
  <view class="list" wx:if="{{list.length>0}}">
    <view class="line"/>
    <view class="step" wx:for="{{list}}" wx:key="{{index}}">
      <view class="times">
        <view class="date">{{item.time}}</view>
        <view class="time">{{item.ftime}}</view>
      </view>
      <view>
        <image/>
        <view class="circle {{index===0?'orange':''}}"></view>
      </view>
      <view class="context">{{item.context}}</view>
    </view>
  </view>
  <view wx:else class="msg">
    <image src="/static/images/dingdan.png" class="ptImg"></image>
    <view>暂无相关物流信息</view>
  </view>
</view>
