<view class="container">
    <view class="list">
        <view class="line"/>
        <view wx:if="{{msg==='暂无相关物流信息'}}" class="msg">暂无相关物流信息</view>
        <view class="step" wx:for="{{list}}" wx:key="{{index}}" wx:if="{{msg!=='暂无相关物流信息'}}">
            <view class="times">
                <view class="date">{{item.time}}</view>
                <view class="time">{{item.ftime}}</view>
            </view>
            <view>
                <image/>
                <view class="circle {{index===0?'orange':''}}"></view>
            </view>
            <view class="context">{{item.context}}</view>
        </view>
    </view>
</view>
