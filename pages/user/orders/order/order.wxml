<!-- pages/tabbar/shoplist/shoplist.wxml -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container" style="padding-top:{{occupation}}px;">
        <view class="block">
            <view class="order">
                <view class="top">
                    <text>农场名</text>
                    <text class="status">状态</text>
                </view>
                <view class="middle">
                    <image />
                    <view>
                        <view class="name">商品名</view>
                        <view class="unit">
                            规格
                            <text class="num">x1</text>
                        </view>
                        <view class="price">￥399</view>
                    </view>
                </view>
                <view class="bottom">
                    <view>
                        <text>运费</text>
                        <text>包邮</text>
                    </view>
                    <view>
                        <text>优惠</text>
                        <text>无</text>
                    </view>
                    <view>
                        <text>实际支付</text>
                        <text>￥888</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="block info">
            <view>订单号<text class=" button copy">复制</text></view>
            <view>支付流水账号</view>
            <view>支付方式</view>
            <view>付款时间</view>
            <view>发货时间</view>
        </view>
        <view class="call">拨打电话</view>
        <view class="ops">
            <text class="button">物流</text>
            <text class="button">取消订单</text>
            <navigator url="/pages/user/orders/receive/receive" class="button">确认收货</navigator>
        </view>
    </view>
</view>