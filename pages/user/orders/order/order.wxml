<!-- 待支付订单查看这个页面 -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container">
        <!-- 倒计时 -->
        <view class="timer">
            <view class="box">
                <image src="../../../../static/icons/icon-time.png" mode="aspectFit" />
                <view>
                    <view>等待买家付款</view>
                    <view class="countdown">剩余{{timetext}}自动关闭</view>
                </view>
            </view>
        </view>
        <view class="address">
            <view class="box">
                <image src="../../../../static/icons/icon-address.png" mode="aspectFit"/>
                <view>
                    <view><text class="name">{{detail.address.name}}</text><text class="phone">{{detail.address.mobile}}</text></view>
                    <view class="addr">{{detail.address.address}}</view>
                </view>
            </view>
        </view>
        <view class="block">
            <view class="order" wx:for="{{detail.items}}" wx:key="{{index}}">
                <view class="top">
                    <view class="title"><image src="{{item.logo}}"/>{{item.name}}</view>
                    <text class="status">订单号:{{item.item_num}}</text>
                </view>
                <view class="middle" wx:for="{{item.goods}}" wx:key="{{index}}" wx:for-item="g">
                    <image src="{{g.goods_info.thumb_image}}" />
                    <view>
                        <view class="name">{{g.goods_info.title}}</view>
                        <view class="unit">
                            {{g.goods_info.specification}}
                            <text class="num">x{{g.num}}</text>
                        </view>
                        <view class="price">￥{{g.price}}</view>
                    </view>
                </view>
                <view class="bottom">
                    <view>
                        <text>运费</text>
                        <text>{{item.cost_freight}}</text>
                    </view>
                    <view>
                        <text>优惠</text>
                        <text>{{item.pmt}}</text>
                    </view>
                    <view>
                        <text>实际支付</text>
                        <text>￥{{item.money}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="block info">
            <view>
                订单编号：{{detail.order_num}}
                <text class="button copy" bind:tap="copyText">复制</text>
            </view>
            <view>创建时间：{{detail.createAt}}</view>
        </view>
        <view class="ops" wx:if="{{detail.order_status!=0}}">
            <text class="button" wx:if="{{detail.order_status==-1}}">删除订单</text>
        </view>
        <!-- 待支付状态 -->
        <view class="bottom-btn">
            <view class="price">
                合计：<text class="p"><text class="_rmb">￥</text>{{detail.money}}</text>
            </view>
            <view class="cancel" bind:tap="cancelOrder">取消订单</view>
            <view class="pay" bind:tap="payOrder">付款</view>
        </view>
    </view>
</view>
