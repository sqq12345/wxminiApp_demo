<!-- 总订单详情 -->
<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container" style="padding-top:{{occupation}}px;">
        <view class="block">
            <view class="order" wx:for="{{detail.items}}" wx:key="{{index}}">
                <view class="top">
                    <text class="title">{{item.name}}</text>
                    <text class="status">{{detail.status}}</text>
                </view>
                <view class="middle" wx:for="{{item.goods}}" wx:key="{{index}}" wx:for-item="g">
                    <image src="{{g.goods_info.thumb_image}}" />
                    <view>
                        <view class="name">{{g.goods_info.title}}</view>
                        <view class="unit">
                            {{g.goods_info.specification}}
                            <text class="num">x{{g.num}}</text>
                        </view>
                        <view class="price">￥{{g.price}}</view>
                    </view>
                </view>
                <view class="bottom">
                    <view>
                        <text>运费</text>
                        <text>{{detail.cost_freight}}</text>
                    </view>
                    <view>
                        <text>优惠</text>
                        <text>{{detail.pmt}}</text>
                    </view>
                    <view>
                        <text>实际支付</text>
                        <text>￥{{detail.money}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="block info">
            <view>
                订单号：{{detail.item_num}}
                <text class="button copy" bind:tap="copyText">复制</text>
            </view>
            <view>支付流水账号：{{detail.pay.pay_id}}</view>
            <view wx:if="{{detail.order_status!=0}}">支付方式：微信支付</view>
            <view wx:if="{{detail.order_status!=0}}">付款时间：{{detail.pay.createAt}}</view>
            <view wx:if="{{detail.order_status==2}}">发货时间：{{detail.deliveryTime}}</view>
        </view>
        <view wx:if="{{detail.order_status!=0}}" class="call">拨打电话</view>
        <view class="ops" wx:if="{{detail.order_status!=0}}">
            <text class="button" wx:if="{{detail.order_status==2||detail.order_status==3}}">
                物流
            </text>
            <text class="button" wx:if="{{detail.order_status==-1}}">删除订单</text>
            <navigator wx:if="{{detail.order_status==2}}" class="button" url="/pages/user/orders/receive/receive">
                确认收货
            </navigator>
        </view>
        <!-- 待支付状态 -->
        <view class="bottom-btn" wx:if="{{detail.order_status==0}}">
            <view class="price">
                合计：<text class="p"><text class="_rmb">￥</text>{{detail.money}}</text>
            </view>
            <view class="cancel">取消订单</view>
            <view class="pay">付款</view>
        </view>
    </view>
</view>