<view>
    <header navbar-data='{{nvabarData}}' />
    <view class="container">
        <view class="list">
            <view class="item">
                头像
                <view class="avatar">
                    <open-data type="userAvatarUrl"></open-data>
                </view>
            </view>
            <view class="item">
                昵称
                <open-data class="username" type="userNickName"></open-data>
            </view>
            <view class="item">
                用户id
                <text>userid</text>
            </view>
            <view class="item">
                手机号
                <input value="{{user.mobile}}" placeholder="填写您的手机号"/>
            </view>
            <navigator class="item address" hover-class="none" url="/pages/user/address/address">
                {{user.address.provincename}} {{user.address.cityname}} {{user.address.areaname}} {{user.address.address}}
                <image class="_right" src="/static/icons/right.png" />
            </navigator>
        </view>
        <view class="_button">保存</view>
    </view>
</view>