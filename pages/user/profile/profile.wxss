/* pages/tabbar/user/profile/profile.wxss */

.container {
    margin-top: 20rpx;
}

.list {
    background: #fff;
    padding: 0 30rpx;
}

view,text{
    color: #333333;
}

.list .item {
    border-bottom: 1px solid #eeeeee;
    min-height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0;
}

.item .address{
    width: 5em;
    word-break: keep-all;
    margin-right: 2em;
}

.item navigator{
    display: flex;
    align-items: center;
}

.item input{
    text-align: right;
}

.item ._right{
    margin-left: 26rpx;
}

.avatar {
    border-radius: 50%;
    border: 1px solid #eeeeee;
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
}