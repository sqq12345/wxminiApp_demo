.container {
    padding: 30rpx;
}

page {
    background: #fff;
}

.form-group {
    border-bottom: 1px solid #eeeeee;
    padding: 24rpx 0;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.form-group text {
    float: left;
    font-weight: 400;
    width: 5.5em;
}

.form-group input,.form-group textarea{
    flex: 1;
}

.form-group textarea {
    padding-right: 1em;
}