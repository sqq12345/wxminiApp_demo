/* pages/enter/step1/step1.wxss */

.container {}

page {
    background: #fff;
}

.form {
    padding: 40rpx;
    display: block;
}

.code {
    /*background: #eeeeee;*/
    display: flex;
    align-items: center;
    justify-content: center;
    /*height: 100rpx;*/
    background: #25CE41;
    height: 144rpx;
}

.code input {
    /*width: 50%;*/
    /*color: #25CE41;*/
    /*border-bottom: 1px solid #25CE41;*/
    width: 300rpx;
    height: 60rpx;
    background: white;
    border-radius: 8rpx;
    text-align: center;
    font-size: 26rpx;
    color: #25CE41;
    line-height: 60rpx;
}

.placeholder {
    color: #25CE41;
    text-align: center;
}

.form-group {
    margin-bottom: 10px;
}

.form-group label {
    display: block;
    font-size: 32rpx;
    color: #333;
    font-weight:bold;
    margin-bottom: 10px;
}

.form-group input {
    border-bottom: 1px solid #eee;
    padding-bottom: 10rpx;
}

.select text {
    display: inline-block;
    font-size: 26rpx;
    color: #555555;
    border-radius: 5px;
    background: #F5F5F5;
    border: 1px solid transparent;
    padding: 14rpx 24rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.select .selected {
    background: #F7FFF8;
    color: #25CE41;
    border: 1px solid #25CE41;
    box-sizing: border-box;
}

button{
    background: #25CE41;
    color: #fff;
    font-size: 30rpx;
}
