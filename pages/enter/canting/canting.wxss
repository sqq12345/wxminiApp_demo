/* pages/enter/step2/step2.wxss */

.container {
    padding: 30rpx;
}

page {
    background: #fff;
}

wux-upload .plus {
    font-size: 70rpx;
}

wux-upload text {
    color: #E7E7E7;
}

.form-group.info>text {
    width: auto !important;
    float: none;
}

.form-group.info {
    border-bottom: 0;
    color: #666666;
}

.form-group {
    border-bottom: 1px solid #eeeeee;
    padding: 24rpx 0;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.form-group .red{
    color: red;
}
.form-group>text {
    float: left;
    font-weight: 400;
    width: 5.5em;
    color: #333333;
}
.form-group>text:first-child{
    font-weight: bold;
}

.form-group input, .form-group textarea,.form-group .address {
    flex: 1;
}

.form-group textarea {
    padding-right: 1em;
}
.gray{
    color: #888;
}
.form-group .getAddress {
    color: #25CE41;
    font-weight: normal;
}
.form-group picker{
    flex: 1;
}

button {
    margin-top: 10rpx;
    background: #25CE41;
    color: #fff;
    font-size: 30rpx;
}
.footer{}
.footer .agreement{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #25CE41;
    padding: 30rpx 0;
}
.footer .agreeSelect{
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}
.footer .agreement image{
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
}
.footer .tips{
    font-size: 24rpx;
    color: #FF8838;
    text-align: center;
    line-height: 48rpx;
}

.half{
    display: flex;
}
.half .form-group{
    width: 50%;
}
.half .form-group>text:last-of-type{
    width: auto;
}
