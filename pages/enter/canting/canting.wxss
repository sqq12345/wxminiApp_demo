/* pages/enter/step2/step2.wxss */

.container {
    padding: 30rpx;
}

page {
    background: #fff;
}

wux-upload .plus {
    font-size: 70rpx;
}

wux-upload text {
    color: #E7E7E7;
}

.form-group.info>text {
    width: auto !important;
    float: none;
}

.form-group.info {
    border-bottom: 0;
    color: #666666;
}

.form-group {
    border-bottom: 1px solid #eeeeee;
    padding: 24rpx 0;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.form-group>text {
    float: left;
    font-weight: 400;
    width: 5.5em;
}

.form-group input, .form-group textarea,.form-group .address {
    flex: 1;
}

.form-group textarea {
    padding-right: 1em;
}
.gray{
    color: #888;
}
.getAddress {
    color: #25CE41;
}

button {
    margin-top: 30rpx;
    background: #25CE41;
    color: #fff;
    font-size: 30rpx;
}

.half{
    display: flex;
}

.half .form-group>text:last-of-type{
    width: auto;
}
