/* pages/settle/settle.wxss */

.container {
    padding: 15px;
}

.bottom-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    display: flex;
    background: #fff;
}

.bottom-btn .all {
    flex-grow: 2;
    display: flex;
    align-items: center;
    padding-left: 15px;
    justify-content: flex-end;
    padding-right: 10px;
}

.bottom-btn .buy {
    background: #26b802;
    color: #fff;
    display: flex;
    align-items: center;
    flex-grow: 1;
    justify-content: center;
}

.item{
    margin-bottom: 15px;
}

.item.user{
    padding-bottom: 10px;
}

.item.user>view>text:last-child{
    float: right;
}

.item .header {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    justify-content:space-between;
}

.item .header .logo {
    border-radius: 50%;
    border: 1px solid #eeeeee;
    width: 24px;
    height: 24px;
    margin-right: 10px;
}

.item .header view {
    display: flex;
    align-items: center;
}

.item .goods {
    display: flex;
    align-items: center;
    padding: 10px;
    margin: 0 -10px;
    background: #e5eee5;
}

.item .goods image {
    width: 80px;
    height: 80px;
    border: 1px solid #ffffff;
    border-radius: 5px;
    margin-right: 10px;
    flex-shrink: 0;
}

.goods .unit {
    font-size: 14px;
    color: #555555;
}

.goods .info {
    flex-grow: 1;
    position: relative;
    height: 78px;
}

.goods .info .price {
    position: absolute;
    bottom: 0;
    width: 100%;
    font-size: 16px;
}

.goods .info .calc {
    float: right;
}

.goods .info .calc .add, .goods .info .calc .sub {
    display: inline-block;
    width: 22px;
    height: 22px;
    border: 1px solid #eeeeee;
    border-radius: 50%;
    text-align: center;
    line-height: 22px;
}

.goods .info .num {
    text-align: center;
    width: 24px;
    display: inline-block;
}

.goods .title {
    line-height: 1;
}

.item {
    background: #ffffff;
    border-radius: 5px;
    padding: 10px 10px 0 10px;
}

.item .line {
    border-bottom: 1px solid #eeeeee;
    line-height: 45px;
}

.item .line text:last-child {
    float: right;
}