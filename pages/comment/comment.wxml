<view class="container">
    <view class="rater">
        <text>{{type == 'shop'?"商家评价":"商品评价"}}</text>
        <view>
            <!--<wux-rater allow-half allow-clear allow-touch-move value="{{form.ranks}}" controlled bind:change="raterChange" />-->
            <wux-rater slot="footer" controlled value="{{ form.ranks }}" bind:change="raterChange" activeColor="#FFAA27" fontSize="30" allowHalf icon="ios-star" />
            <text class="score">{{form.ranks}}分</text>
        </view>
    </view>
    <view class="textarea">
        <textarea placeholder="请输入您的评论..." bindinput="onInput" maxlength="500"/>
        <wux-upload listType="picture-card" max="4" bind:complete="onComplete" bind:fail="onUploadFail" bind:remove="onRemove">
            <image src="/static/icons/upload.png" />
        </wux-upload>
    </view>
    <view class="_button" bindtap="{{!btnDisabled?'submit':''}}">提交评论</view>
</view>
