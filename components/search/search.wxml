<view class="search">
    <picker bindchange="onChange" value="{{selected}}" range="{{cities}}" range-key="city">
        <view wx:if="{{selected!=-1}}" class="picker">
            {{cities[selected].city}}<image src="/static/icons/down.png" class="down"/>
        </view>
        <view wx:if="{{selected==-1}}" class="picker">定位中</view>
    </picker>
    <view>
        <input placeholder='请输入您要搜索的农场或商品' confirm-type="search" bind:confirm="search" value="{{query}}" />
        <image src="/static/icons/search.png" class="search_icon"/>
    </view>
</view>