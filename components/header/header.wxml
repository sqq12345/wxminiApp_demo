<!-- components/header/header.wxml -->
<view>
  <view class='nav-wrap' style='height: {{height*2 + 20}}px;background:{{navbarData.transparent?"transparent":"#fff"}};position:{{navbarData.position||"fixed"}}'>
    <view class='nav-title' style='line-height:{{height*2 + 44}}px;color:{{navbarData.color?navbarData.color:"#000"}}'>
      {{navbarData.title}}
    </view>
    <view style='display: flex; justify-content: space-around;flex-direction: column'>
      <view class='nav-capsule' style='height: {{height*2 + 44}}px;' wx:if='{{navbarData.showCapsule}}'>
        <view bindtap='_navback' wx:if='{{!share}}' style="display:flex">
          <image src='/static/icons/back.png' mode='aspectFill' class='back-pre'></image>
        </view>
        <!-- <view class='navbar-v-line' wx:if='{{!share}}'></view>
      <view bindtap='_backhome'>
        <image src='/imgs/back-home.png' mode='aspectFill' class='back-home'></image>
      </view> -->
      </view>
    </view>
  </view>
  <!-- 用高度把主要内容压下去 -->
  <view wx:if="{{!navbarData.transparent}}" style="height:60px"></view>
</view>