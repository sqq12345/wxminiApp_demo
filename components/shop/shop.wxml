<!-- components/shop/shpo.wxml -->
<view>
    <navigator class='shop' url="{{jumpUrl}}" hover-class="none">
        <view><image mode="aspectFill" class="logo" src="{{item.logo}}"/></view>
        <view class="text">
            <view class="title">{{item.name}}</view>
            <view class="info">
                <view class="info-left"><image class="icon location" src="/static/icons/shops/1.png"/><text class="text-overflow">{{item.district}}</text></view>
                <text>距离{{distance}}</text>
            </view>
            <view class="info" catch:tap="openDetail" data-id="{{item.id}}">
                <view><image class="icon coupon" src="/static/icons/shops/2.png"/><text>优惠券</text></view>
                <view>{{item.goods.length}}个活动<image class="down" src="/static/icons/down3.png"/></view>
            </view>
        </view>
    </navigator>
    <view class="activity" wx:if="{{item.goods.length>0&&showDetail}}">
        <navigator url="/pages/goods/goods?id={{item.id}}" hover-class="none" wx:for="{{goods}}" wx:key="{{index}}">
            <image mode="aspectFill" src="{{item.thumb_image}}"/>
            <view class="ellipsis">{{item.title}}</view>
            <view class="price">￥{{item.price}}</view>
        </navigator>
    </view>
</view>
