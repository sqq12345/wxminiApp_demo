.shop {
    display: flex;
    /* padding: 15px; */
    padding-top: 30rpx;
    border-top: 1px solid #eeeeee;
    padding-bottom: 30rpx;
}

.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
}

.shop .logo {
    border-radius: 50%;
    border: 1px solid #ccc;
    width: 128rpx;
    height: 128rpx;
    margin-right: 30rpx;
}

.shop .icon{
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
    margin-right: 8rpx;
}

.shop .text {
    font-size: 24rpx;
    color: #777;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.shop .text .info text{
    font-size: 24rpx;
}

.shop .text>view {
    flex-grow: 1;
    display: flex;
    justify-content: space-between;
}

.shop .text .title {
    color: #000000;
    font-size: 30rpx;
}

.activity {
    /* padding: 15px; */
    padding-bottom: 30rpx;
}

.activity image {
    width: 100%;
    height: 30vw;
    border: 1px solid #eeeeee;
}

.activity>navigator {
    width: 31.33%;
    margin-right: 3%;
    border-radius: 3px;
    display: inline-block;
    box-sizing: border-box;
}

.activity>navigator:last-child {
    margin-right: 0;
}

.activity>navigator .price {
    color: #FF6600;
}